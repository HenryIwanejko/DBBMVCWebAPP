@model IEnumerable<Game>

@{
    ViewData["Title"] = "MyGames";
}

<style>
.title-section {
    background-color: #009DC4;
    border-radius: 25px;
}
.container {
    padding: 20px;
}

.form-control {
    width: 95%
}

h2 {
    color: white;
}

.gap-bottom {
    padding-bottom: 2%;
}
</style>
<div class="gap-bottom">
    <div class="title-section">
        <div class="container">
            <h2>@ViewData["Message"]</h2>
        </div>
    </div>
</div>
<table class="table pt">
    @foreach (var game in Model)
    {   
        <tr>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(game.GameImage)" width="100px" height="100px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.OwnerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.GameID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.Quantity)
            </td>
        </tr>
    }
</table>