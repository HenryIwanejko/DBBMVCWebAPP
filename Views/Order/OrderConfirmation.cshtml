@model OrderConfirmation
@{
    ViewData["Title"] = "OrderConfirmation";
}
<style>
.title-section {
    background-color: #009DC4;
    border-radius: 25px;
}
.container {
    padding: 20px;
}
.order-section {
    padding: 0.5%;
    border-style: solid;
    border-width: 3px;
    border-color: #009DC4;
}
h2 {
    color: white;
}

.table {
    border: none;
}
</style>
<div class="title-section">
    <div class="container">
        <h2>@ViewData["Message"]</h2>
    </div>
</div>
<h3>Order Details:</h3>
<table class="table">
    <tr> 
        <th>OrderID</th>
        <th>Order Date</th>
        <th>Order Total</th>
    </tr>
    <tr>
        <td>@Html.DisplayFor(modelItem => modelItem.Order.OrderID)</td>
        <td>@Html.DisplayFor(modelItem => modelItem.Order.OrderDate)</td>
        <td>Â£@Html.DisplayFor(modelItem => modelItem.Order.OrderTotal)</td>
    </tr>
</table>
<h3>Order Items:</h3>
<table class="table">
    <tr> 
        <th>Game Image</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach (var game in Model.OrderItems)
    {   
        <tr>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(game.GameImage)" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.Description)
            </td>
        </tr>
    }
</table>
